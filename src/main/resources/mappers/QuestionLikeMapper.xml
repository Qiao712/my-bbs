<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="github.qiao712.bbs.mapper.QuestionLikeMapper">
    <select id="isQuestionLikedByUser" resultType="boolean">
        SELECT (
            EXISTS (SELECT * FROM t_question_like WHERE user_id = #{userId} AND question_id = #{postId})
        ) liked
    </select>
</mapper>
